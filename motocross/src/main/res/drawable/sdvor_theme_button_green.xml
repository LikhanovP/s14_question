<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners
                android:radius="3dip"/>
            <gradient
                android:angle="-90"
                android:startColor="@color/filter_background1"
                android:centerColor="@color/filter_background2"
                android:endColor="@color/filter_background3"/>
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle">
            <corners
                android:radius="3dip"/>
            <gradient
                android:angle="-90"
                android:startColor="@color/filter_background1"
                android:centerColor="@color/filter_background2"
                android:endColor="@color/filter_background3"/>
        </shape>
    </item>
</selector>