<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cup_item_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_selector"
    android:gravity="center_vertical"
    android:minHeight="48dp"
    android:orientation="horizontal"
    android:paddingLeft="8dp"
    android:paddingRight="8dp"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/photo_item_image"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginRight="8dp"
        android:adjustViewBounds="false"
        android:alpha="1"
        android:src="@drawable/ic_action_id_card_light"
        tools:ignore="ContentDescription,RtlHardcoded"/>

    <TextView
        android:id="@+id/photo_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Регистрация прицепа (лицевая сторона)"/>

</LinearLayout>
