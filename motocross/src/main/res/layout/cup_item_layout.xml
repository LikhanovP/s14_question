<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/listview_item_selector"
    android:minHeight="48dp"
    android:orientation="horizontal">
    <!--style="@style/ListViewItem"-->
    <!--android:divider="null"-->
    <LinearLayout
        android:id="@+id/cup_item_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingLeft="8dp"
        android:paddingRight="8dp">

        <ImageView
            android:id="@+id/cup_item_star"
            android:layout_width="@dimen/rating_item_icon_size"
            android:layout_height="@dimen/rating_item_icon_size"
            android:src="@drawable/ic_rate_star_on"/>

        <TextView
            android:id="@+id/cup_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textSize="18sp"
            tools:text="11.11.2011"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                style="@style/FormTextCaption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cup_screen_set_txt_rating"
                android:textSize="18sp"/>

            <TextView
                android:id="@+id/cup_item_mark"
                style="@style/FormTextValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                tools:text="5.000"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>