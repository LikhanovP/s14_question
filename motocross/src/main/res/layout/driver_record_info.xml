<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                style="@style/Card"
                android:layout_width="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="4dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/time_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/info_record_time_title"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="@string/time_title"
                            android:textSize="18sp"
                            android:textStyle="normal|bold"
                            android:textColor="@color/black"
                            android:layout_width="170dp" />

                        <TextView
                            android:id="@+id/info_record_time"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:gravity="right"
                            android:textSize="18sp"
                            tools:text="11:44" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/mark_layout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/info_record_mark_title"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="@string/mark_title"
                            android:textSize="18sp"
                            android:textStyle="normal|bold"
                            android:textColor="@color/black"
                            android:layout_width="170dp" />

                        <TextView
                            android:id="@+id/info_record_mark"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:gravity="right"
                            android:textSize="18sp"
                            tools:text="7 из 10" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/tknum_layout">

                        <TextView
                            android:id="@+id/info_record_tknum_title"
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:text="@string/tknum_title"
                            android:textColor="@color/black"
                            android:textSize="18sp"
                            android:textStyle="normal|bold" />

                        <TextView
                            android:id="@+id/info_record_tknum"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="4dp"
                            android:gravity="right"
                            android:textSize="18sp"
                            tools:text="6897536" />
                    </LinearLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                style="@style/Card"
                android:layout_width="match_parent"
                android:layout_marginTop="4dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginBottom="8dp"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/info_record_title"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:textSize="18sp"
                        android:textStyle="normal|bold"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        tools:text="МОЛОДЕЦ" />

                    <TextView
                        android:id="@+id/info_record_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="4dp"
                        android:textSize="18sp"
                        tools:text="Водитель был очень вежлив" />

                </LinearLayout>

            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>


</LinearLayout>