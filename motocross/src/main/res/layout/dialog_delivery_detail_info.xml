<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="@string/delivery_detail_dialog_title"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/more_actions"
            style="@style/Base.Widget.AppCompat.Toolbar.Button.Navigation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="right"
            android:padding="16dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:tint="@color/grey"
            tools:ignore="RtlHardcoded"/>

    </RelativeLayout>


    <TextView
        android:id="@+id/delivery_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:autoLink="phone"
        android:paddingBottom="16dp"
        android:paddingLeft="24dp"
        android:paddingRight="16dp"
        tools:ignore="RtlHardcoded"
        tools:text="Some Info"/>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/cancel"
        style="@style/DialogButton.Neutral"
        android:layout_width="100dp"
        android:layout_gravity="right"
        android:layout_marginRight="2dp"
        android:text="@string/delivery_dialog_detail_close"
        tools:ignore="RtlHardcoded"/>

</LinearLayout>